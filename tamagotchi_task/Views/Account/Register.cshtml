@model tamagotchi_task.Models.ViewModels.RegisterModel

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b4a9a2e718.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/tamagotchi_task.styles.css" asp-append-version="true"/>
</head>
<body>
<div>
    <a href="/account/register"><h1>TAMOTASK</h1></a>
    <form action="/account/login">
    <button id="buttonlogin">Log In</button>
    </form>
</div>
<div class="left-box">
    <img src="https://img.itch.zone/aW1nLzY1Nzg4NzAuZ2lm/original/Z%2BLGMr.gif" alt="heart">
    <h2>Motivate yourself to achieve your goals</h2>
    <p>It's time to have some fun doing things! Join and improve your life by completing tasks one by one.</p>
</div>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="right-box">
        <h2>Registration</h2>
        <div class="form-group">
            <input type="text" placeholder="Username" asp-for="Name"/>
            <span asp-validation-for="Name"/>
        </div>
        <div class="form-group">
            <input placeholder="Password" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group">
            <input placeholder="Confirm your password" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Sign Up" id="button"/>
        </div>
    </div>
</form>
</body>
</html>
