@model tamagotchi_task.Models.ViewModels.Avatar.WallpaperModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">

    <script src="~/js/create.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/tamagotchi_task.styles.css" asp-append-version="true"/>
</head>
<body>
    <div id="welcomeDiv" class="answer_box" >
            <div id="mess">
                <img src="~/img/catMes.png">
                <p>Here you can choose your character with which you will complete tasks</p>
            </div>
        <div>
            <img id="myWallpaper" src="~/img/circle.png">
            <img id="myImg" src="~/img/cat0.png">
            <img id="myAccessories" src="">
        </div>
        <div id="showWallpaper" class="buttoncolor">
            <input type="image" src="/img/circle.png" onclick="document.getElementById('text').value='~/img/circle.png'; document.getElementById('myWallpaper').src='/img/circle.png';">
            <input type="image" src="/img/circle1.png" onclick="document.getElementById('text').value='~/img/circle1.png'; document.getElementById('myWallpaper').src='/img/circle1.png';">
            <input type="image" src="/img/circle2.png" onclick="document.getElementById('text').value='~/img/circle2.png'; document.getElementById('myWallpaper').src='/img/circle2.png';">
            <input type="image" src="/img/circle3.png" onclick="document.getElementById('text').value='~/img/circle3.png'; document.getElementById('myWallpaper').src='/img/circle3.png';">
            <input type="image" src="/img/circle4.png" onclick="document.getElementById('text').value='~/img/circle4.png'; document.getElementById('myWallpaper').src='/img/circle4.png';">
            <input type="image" src="/img/circle5.png" onclick="document.getElementById('text').value='~/img/circle5.png'; document.getElementById('myWallpaper').src='/img/circle5.png';">
            <input type="image" src="/img/circle6.png" onclick="document.getElementById('text').value='~/img/circle6.png'; document.getElementById('myWallpaper').src='/img/circle6.png';">
        </div>
        <form asp-controller="Character" asp-action="Wallpaper">
            <input type="text" id="text" style="display: none" value="~/img/circle.png" asp-for="Wallpaper"/>
            <button type="submit" id="finish" class="start">Next</button>
        </form>
    </div>
</body>
</html>